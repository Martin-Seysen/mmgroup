/**
  @brief Initialize structure ``qstate12_support_type`` for reading a state

  The function initializes a stucture of type ``qstate12_support_type``
  from a state of type ``pqs``. Then the nonzero matrix entries of
  that state may be obtained by subsequent calls to 
  function ``qstate12_support_next``.
*/
// %%EXPORT p
int32_t qstate12_support_init(qstate12_type *pqs,  qstate12_support_type *psup)
{
    int32_t status;
    if ((status = qstate12_reduce(pqs)) < 0) return status;
    if (psup == NULL) return ERR_QSTATE12_PARAM;
    if (pqs->ncols > QSTATE_SUPPORT_MAXCOLS
       || pqs->nrows > (QSTATE_SUPPORT_MAXCOLS + 1)) return ERR_QSTATE12_TOOLARGE;
    status = qstate12_copy_alloc(pqs, &(psup->qs), psup->buf,
        QSTATE_SUPPORT_MAXCOLS + 1);
    if (status < 0) return status;
    pqs = &(psup->qs);

    psup->size = 1UL << pqs->ncols;
    psup->i = 0;
    if (pqs->nrows == 0) {
        psup->c_weight = psup->weight = 0;
        psup->factor = 0x0;
        psup->batchlength = 0;
        psup-> n_batches = 1;
        return 0;
    }
    psup->c_weight = psup->weight = 1UL << (pqs->nrows - 1);
    psup->lb_batchlength = (pqs->nrows < 7) ? (pqs->nrows - 1) : 6;
    status = qstate12_join_imaginary(pqs);
    if (status < 0) return status;
    if (status > 0 ) {
        if (psup->lb_batchlength == (pqs->nrows - 1))
           --psup->lb_batchlength;
        psup->c_weight >>= 1;
    }
    psup->batchlength = 1UL << psup->lb_batchlength;
    psup->n_batches = 1UL << (pqs->nrows - 1 - psup->lb_batchlength);
    psup->factor = pqs->factor;
    psup->assoc = pqs->data[0];
    psup->qf = 0;
    if (psup->factor & 4) {
        psup->factor ^= 4;
        psup->qf ^=  1;
    }
    return 0;
}





/// @cond DO_NOT_DOCUMENT


// qstate12_lsbtab[i] is the position of least significant bit of i | 0x40
const uint8_t qstate12_lsbtab[64] = {
    6,0,1,0,2,0,1,0, 3,0,1,0,2,0,1,0,
    4,0,1,0,2,0,1,0, 3,0,1,0,2,0,1,0,
    5,0,1,0,2,0,1,0, 3,0,1,0,2,0,1,0,
    4,0,1,0,2,0,1,0, 3,0,1,0,2,0,1,0
};

#define QSTATE12_SUPPORT_MULTIPLE_STEP

/// @endcond





/**
  @brief Read nonzero entries of a state in batches

  We assume that a structure of type ``qstate12_support_type`` has been
  initialized from a state by function ``qstate12_support_init``.  Then
  batches of nonzero values of that state are obtained by repeated
  calls to this function.

  Each call to this function returns a batch of pairs ``(index, value)``
  of length ``psup->batchlength``. Altogether there
  are ``psup->n_batches`` of these batches. Indices are given as
  integer indices of a column vector, ignoring the shape of the state
  matrix. The i-th index if a batch is contained in ``psup->indices[i]``.

  The value of the i-th index is obtained as

  ``psup->factor *  (-1) ** psup->signs[i]`` .

  Here the factor is encoded in ``psup->sfactor`` as described in
  the C function ``qstate12_factor_to_complex``. That factor
  must be (re-)calculated if ``psup->factor_new`` is nonzero;
  otherwise the factor from the previous batch can be kept.

  After calling this function ``psup->n_batches`` times with the
  argument ``psup``, the data in this structure are used up and
  should be considered as garbage.
*/
// %%EXPORT p
int32_t qstate12_support_next(qstate12_support_type *psup)
{
    qstate12_type *pqs = &(psup->qs);
    psup->factor_new = 0;
    if ((psup->i & ~psup->c_weight) == 0) {
        psup->factor_new = 1;
        if (psup->i == psup->weight || psup->batchlength == 0) {
            psup->batchlength = 0;
            return 0;
        }
        if (psup->i == psup->c_weight)
            psup->factor = (psup->factor + 2) & (~8);
    }
    uint64_t *m_end = pqs->data + pqs->nrows - 1;
    uint64_t mask = (ONE << pqs->ncols) - 1;
    uint64_t nrc = pqs->ncols + pqs->nrows - 1;
    uint64_t assoc = psup->assoc;
    uint64_t qf = psup->qf & 1;
    uint64_t d, d1;
    uint64_t i = 0;
  #ifndef QSTATE12_SUPPORT_MULTIPLE_STEP
    // This is the simpler code
    while (1) {
        psup->signs[i] = (uint8_t)(qf);
        psup->indices[i] = (uint32_t)(assoc & mask);
        if (++i == psup->batchlength) break;
        d = qstate12_lsbtab[i];
        qf ^= (assoc >> (nrc - d)) & 1;
        assoc ^= m_end[0-d];
    }
  #else
    // This is the faster code
    uint64_t m_end_0 =  m_end[0];
    if (psup->batchlength >= 4) {
        uint64_t m_end_1 =  m_end[-1];
        while (1) {
            psup->signs[i] = (uint8_t)(qf);
            psup->indices[i] = (uint32_t)(assoc & mask);
            qf ^= (assoc >> nrc) & 1;
            assoc ^= m_end_0;
            psup->signs[i+1] = (uint8_t)(qf);
            psup->indices[i+1] = (uint32_t)(assoc & mask);
            qf ^= (assoc >> (nrc - 1)) & 1;
            assoc ^= m_end_1;
            psup->signs[i+2] = (uint8_t)(qf);
            psup->indices[i+2] = (uint32_t)(assoc & mask);
            qf ^= (assoc >> nrc) & 1;
            assoc ^= m_end_0;
            psup->signs[i+3] = (uint8_t)(qf);
            psup->indices[i+3] = (uint32_t)(assoc & mask);
            i += 4;
            if (i >= psup->batchlength) break;
            d = qstate12_lsbtab[i];
            qf ^= (assoc >> (nrc - d)) & 1;
            assoc ^= m_end[0-d];
        }
    } else {
        psup->indices[0] = (uint32_t)(assoc & mask);
        psup->signs[0] = (uint8_t)(qf & 1);
        if (psup->batchlength >= 2) {
            qf ^= (assoc >> nrc) & 1;
            assoc ^= m_end_0;
            psup->signs[1] = (uint8_t)(qf);
            psup->indices[1] = (uint32_t)(assoc & mask);
        }
    }
  #endif
    psup->i += psup->batchlength;
    d = psup->lb_batchlength;
    i = psup->i >> d;
    while (1) {
        d1 = qstate12_lsbtab[i & 63];
        d += d1;
        if (d1 < 6) break;
        i >>= d1;
        if (i == 0) return -1;
    };
    psup->qf = (qf + (assoc >> (nrc - d))) & 1;
    psup->assoc = assoc ^= m_end[0-d];
    return psup->batchlength;
}



/**
  @brief Check and adjust structure of type ``qstate12_support_type``

  We assume that a structure of type ``qstate12_support_type`` has been
  initialized from a state by function ``qstate12_support_init`` and not
  yet been used by function ``qstate12_support_next``. So it encodes a
  certain quadratic state ``qs``.

  Then this function checks the data in the structure for certain
  properties (possibly modifying the data), depending of the  bits of
  parameter ``flags`` as follws:

  Bit 0 set: Return an error if not all entries of ``qs`` are real.

  Bit 1 set: Return an error if not all entries of ``qs`` are rational.

  Bit 2 set: Return an error if not all entries of ``qs`` are integral
  and fit into an integer of type ``int32_t``.

  Bit 3 set: Reduce all rational entries of ``qs`` modulo 3 and return
  an error if any of them is not rational. 

  Depending on parameter ``flags``, we assert the following in case
  of success: 

  In any of the bits 0, 1, 2, 3 has been set then ``psup->factor`` is
  positive and will not be changed by function ``qstate12_support_next``.

  If bit 3 has been set then ``psup->factor`` is equal to 1. 

  The function returns 0 in case of success and a negative value in 
  case of failure.
*/
// %%EXPORT p
int32_t qstate12_support_adjust(qstate12_support_type *psup, uint32_t flags)
{
    if (flags & 0xf) {
         // Error if any entry is not real 
         if (psup->factor & 0x3 || psup->c_weight != psup->weight)
             return ERR_QSTATE12_DOMAIN;
         // Make the factor positive
         if (psup->factor & 0x4) {
             psup->factor ^= 0x4;
             psup->qf ^= 0x1;
         }
    }
    if (flags & 0xe) {
        // Error if any entry is not rational 
        if (psup->factor & 0x10) return ERR_QSTATE12_DOMAIN;
    }
    if (flags & 0x8) {
        // Reduce all entries mod 3: 
        // All integral powers of 4 are equal to 1 (mod 3)
        psup->factor &= 0x3f;
        // 2 is equal to -1 (mod 3)
        if (psup->factor & 0x20) {
            psup->qf ^= 0x1;
            psup->factor ^= 0x20;
        }
        if (psup->factor) return ERR_QSTATE12_DOMAIN;
    }
    if (flags & 0x4) {
        // Entry must be an integer
        if (psup->factor < 0) return ERR_QSTATE12_SCALAR_INT;
        // Absolute value of an entry may be at most 2**30
        if (psup->factor > 0x3c0) return ERR_QSTATE12_SCALAR_OVFL;
    }
    return 0;
}






